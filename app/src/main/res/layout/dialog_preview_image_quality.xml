<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="#fff" android:paddingLeft="20dp" android:paddingTop="20dp" android:paddingRight="20dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="2">
    <LinearLayout android:orientation="vertical" android:id="@+id/option_low_quality_image" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="#0000" android:gravity="bottom" android:id="@+id/options_tx_uhd" android:paddingLeft="10dp" android:paddingTop="10dp" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Low Quality"/>
        <TextView android:textSize="12sp" android:textColor="#0000" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Preview Image will load Faster."/>
    </LinearLayout>
    <View android:background="#0000" android:layout_width="match_parent" android:layout_height="0.1dp" android:layout_below="@+id/option_low_quality_image"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/option_high_quality_image" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/option_low_quality_image">
        <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="#0000" android:gravity="bottom" android:id="@+id/options_tx_fhd" android:paddingLeft="10dp" android:paddingTop="20dp" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="High Quality"/>
        <TextView android:textSize="12sp" android:textColor="#0000" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Preview Image will load Slower."/>
    </LinearLayout>
</RelativeLayout>
