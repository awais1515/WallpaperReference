<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="#fff" android:paddingTop="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="12sp" android:textColor="#0000" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="(swipe up to expand, swipe down to close)"/>
    <TextView android:textSize="12sp" android:textColor="#000" android:gravity="center" android:id="@+id/cate_options_no_pro_version" android:paddingLeft="10dp" android:paddingRight="10dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Enable &apos;Auto Download Wallpaper&apos; feature for these changes to have effect"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="40dp" android:paddingStart="10dp" android:paddingEnd="10dp">
        <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="#000" android:gravity="end|center_vertical" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="Show Only Online Wallpapers:" android:layout_toLeftOf="@+id/options_prioritise_toggle" android:fontFamily="monospace" android:paddingStart="10dp" android:paddingEnd="10dp" android:layout_toStartOf="@+id/options_prioritise_toggle"/>
        <androidx.appcompat.widget.SwitchCompat android:theme="@style/SCBSwitchWhiteBG" android:textColor="?attr/textColor" android:layout_gravity="center_vertical" android:id="@+id/options_prioritise_toggle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="40dp" android:paddingStart="10dp" android:paddingEnd="10dp">
        <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="#000" android:gravity="end|center_vertical" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="Download Over Wifi Only:" android:layout_toLeftOf="@+id/options_over_wifi_toggle" android:fontFamily="monospace" android:paddingStart="10dp" android:paddingEnd="10dp" android:layout_toStartOf="@+id/options_over_wifi_toggle"/>
        <androidx.appcompat.widget.SwitchCompat android:theme="@style/SCBSwitchWhiteBG" android:textColor="?attr/textColor" android:layout_gravity="center_vertical" android:id="@+id/options_over_wifi_toggle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="40dp" android:paddingStart="10dp" android:paddingEnd="10dp">
        <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="#000" android:gravity="end|center_vertical" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="Auto Save Wallpaper:" android:layout_toLeftOf="@+id/options_auto_save_toggle" android:fontFamily="monospace" android:paddingStart="10dp" android:paddingEnd="10dp" android:layout_toStartOf="@+id/options_auto_save_toggle"/>
        <androidx.appcompat.widget.SwitchCompat android:theme="@style/SCBSwitchWhiteBG" android:textColor="?attr/textColor" android:layout_gravity="center_vertical" android:id="@+id/options_auto_save_toggle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="40dp" android:paddingStart="10dp" android:paddingEnd="10dp">
        <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="#000" android:gravity="end|center_vertical" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="Only 4K Wallpapers:" android:layout_toLeftOf="@+id/options_only_uhd_toggle" android:fontFamily="monospace" android:paddingStart="10dp" android:paddingEnd="10dp" android:layout_toStartOf="@+id/options_only_uhd_toggle"/>
        <androidx.appcompat.widget.SwitchCompat android:theme="@style/SCBSwitchWhiteBG" android:textColor="?attr/textColor" android:layout_gravity="center_vertical" android:id="@+id/options_only_uhd_toggle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <View android:background="#0000" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="5dp"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="28dp">
        <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="#000" android:gravity="center" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Categories" android:layout_centerInParent="true" android:textAllCaps="true" android:fontFamily="monospace"/>
        <ImageView android:layout_gravity="end|center_vertical" android:id="@+id/iv_select_all" android:layout_width="26dp" android:layout_height="26dp" android:layout_marginRight="10dp" android:src="@drawable/ic_menu_select_all_black" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginEnd="10dp" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <View android:background="#0000" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="50dp" android:layout_marginTop="10dp" android:layout_marginRight="50dp" android:layout_marginBottom="5dp"/>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/recycler_view_categories_select" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>
