<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="#fff" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="#0000" android:gravity="center" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="60dp" android:text="Downloading Wallpaper..."/>
    <View android:id="@+id/view" android:background="#0000" android:layout_width="match_parent" android:layout_height="1dp"/>
    <ProgressBar android:id="@+id/image_download_progress_bar" android:background="@drawable/progress_bg" android:layout_width="match_parent" android:layout_height="4dp" android:max="100" android:progressDrawable="@drawable/progress" style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
    <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="#0000" android:gravity="center" android:id="@+id/tx_download_percentage" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="70dp" android:text="0%"/>
</LinearLayout>
